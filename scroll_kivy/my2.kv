MDScreen:
    md_bg_color: self.theme_cls.backgroundColor

    MDTabsSecondary:
        id: tabs
        do_default_tab: False
        default_tab: tab_home
    
            
        MDDivider:
            size_hint_y: 100

        MDTabsCarousel:
            id: related_content
            size_hint_y: None
            height: root.height - tabs.ids.tab_scroll.height
            lock_swiping: True

            BoxLayout:
                on_release: screen_manager.current = 'screen1'

                      
        MDTabsItem:
            id: tab_home  
            MDTabsItemIcon:
                icon: "home" 
                on_release: print(1)
            MDTabsItemText:
                text: ''

