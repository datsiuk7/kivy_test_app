MDScreen:
    ScreenManager:
        id: screen_manager
        Screen:
            name: 'screen1'
            BoxLayout:
                orientation: 'vertical'
                MDButton:
                    text: "Перейти на сторінку 2"
                    on_release: 
                        screen_manager.transition.direction = 'right'
                        screen_manager.current = 'screen2'
                MDScrollView:
                    MDButton:
                        MDButtonText:
                            text: "Elevated"
            

        Screen:
            name: 'screen2'
            BoxLayout:
                orientation: 'vertical'
                MDButton:
                    text: "Повернутися на сторінку 1"
                    on_release: screen_manager.current = 'screen1'
                Label:
                    text: 'Вміст сторінки 2'

