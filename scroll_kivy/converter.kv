<PageSettingScreen>
    MDLabel:
        text: "label2"
        halign: "center"

MDScreen:
    Image:
        source: '../bg1.jpg'
        allow_stretch: True
        keep_ratio: False
    MDBoxLayout:
        orientation: "vertical"
        # md_bg_color: self.theme_cls.backgroundColor
        
        MDNavigationBar:
            id: navbar
            height: dp(40) 
            MDNavigationItem:
                active: True
                on_release: app.navigate_to_screen1("screenHome")
                MDNavigationItemIcon:
                    icon: "home"

            MDNavigationItem:
                on_release: app.navigate_to_screen1("screenHistory")
                MDNavigationItemIcon:
                    icon: "history"


            MDNavigationItem:
                on_release: app.navigate_to_screen1("screenSetting")
                MDNavigationItemIcon:
                    icon: "cog"

        ScreenManager:
            id: screen_manager

            PageHomeScreen:
                name: "screenHome"
            PageHistoryScreen:
                name: "screenHistory"
            PageSettingScreen:
                name: "screenSetting"