<PageHomeScreen>
    StackLayout:
        orientation: 'lr-tb'

        BoxLayout:
            orientation: 'vertical'
            # field0
            BoxLayout:
                size_hint_y: None
                height: self.minimum_height
                spacing: '20dp'
                padding: ('20dp', '10dp')
                Label:
                    id: text_input0
                    text: ''
                    font_size: '50dp'
                    height: self.texture_size[1]
                    background_color: 0, 0.9, 0.9, 1
                    color: 1, 1, 1, 1
                    on_touch_up: app.on_text_input_click(self, args[1], id_input=0)
                    canvas.before:
                        Color:
                            rgba: 0.5, 0.5, 0.5, 0.5  # Колір фону (світло-сірий)
                        Rectangle:
                            pos: self.pos
                            size: self.size
                        Color:
                            rgba: 0.5, 0, 0, 0.3
                        Line:
                            width: 2         # Ширина рамки
                            rectangle: self.x, self.y, self.width, self.height
    
                MDIconButton:
                    style: "tonal"
                    md_bg_color: "brown"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    on_press: text_input0.text = ''
                    icon: "alpha-v"
            # field1
            BoxLayout:
                size_hint_y: None
                height: self.minimum_height
                spacing: '20dp'
                padding: ('20dp', '10dp')
                Label:
                    id: text_input1
                    text: ''
                    font_size: '50dp'
                    height: self.texture_size[1]
                    background_color: 0, 0.9, 0.9, 1
                    color: 1, 1, 1, 1
                    on_touch_up: app.on_text_input_click(self, args[1], id_input=1)
                    canvas.before:
                        Color:
                            rgba: 0.5, 0.5, 0.5, 0.5  # Колір фону (світло-сірий)
                        Rectangle:
                            pos: self.pos
                            size: self.size
                        Color:
                            rgba: 0, 0, 0, 0
                        Line:
                            width: 2         # Ширина рамки
                            rectangle: self.x, self.y, self.width, self.height
    
                MDIconButton:
                    style: "tonal"
                    md_bg_color: "brown"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    on_press: text_input1.text = ''
                    icon: "alpha-a"
            # field2
            BoxLayout:
                size_hint_y: None
                height: self.minimum_height
                spacing: '20dp'
                padding: ('20dp', '10dp')
                Label:
                    id: text_input2
                    text: ''
                    font_size: '50dp'
                    height: self.texture_size[1]
                    background_color: 0, 0.9, 0.9, 1
                    color: 1, 1, 1, 1
                    on_touch_up: app.on_text_input_click(self, args[1], id_input=2)
                    canvas.before:
                        Color:
                            rgba: 0.5, 0.5, 0.5, 0.5  # Колір фону (світло-сірий)
                        Rectangle:
                            pos: self.pos
                            size: self.size
                        Color:
                            rgba: 0, 0, 0, 0
                        Line:
                            width: 2         # Ширина рамки
                            rectangle: self.x, self.y, self.width, self.height
    
                MDIconButton:
                    style: "tonal"
                    md_bg_color: "brown"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    on_press: text_input2.text = ''
                    icon: "alpha-w"
            # field3
            BoxLayout:
                size_hint_y: None
                height: self.minimum_height
                spacing: '20dp'
                padding: ('20dp', '10dp')
                Label:
                    id: text_input3
                    text: ''
                    font_size: '50dp'
                    height: self.texture_size[1]
                    background_color: 0, 0.9, 0.9, 1
                    color: 1, 1, 1, 1
                    on_touch_up: app.on_text_input_click(self, args[1], id_input=3)
                    canvas.before:
                        Color:
                            rgba: 0.5, 0.5, 0.5, 0.5  # Колір фону (світло-сірий)
                        Rectangle:
                            pos: self.pos
                            size: self.size
                        Color:
                            rgba: 0, 0, 0, 0
                        Line:
                            width: 2         # Ширина рамки
                            rectangle: self.x, self.y, self.width, self.height
    
                MDIconButton:
                    style: "tonal"
                    md_bg_color: "brown"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    on_press: text_input3.text = ''
                    icon: "omega"
            # allclear and submit
            BoxLayout:
                size_hint_y: None
                height: self.minimum_height
                spacing: '20dp'
                padding: ('20dp', '50dp')
                AnchorLayout:
                    MDIconButton:
                        size_hint_x: .9
                        style: "tonal"
                        md_bg_color: "brown"
                        pos_hint: {"center_x": .5, "center_y": .5}
                        on_press: text_input0.text = '';text_input1.text = '';text_input2.text = '';text_input3.text = '';
                        icon: "close"
                AnchorLayout:
                    MDIconButton:
                        size_hint_x: .9
                        style: "tonal"
                        md_bg_color: "brown"
                        pos_hint: {"center_x": .5, "center_y": .5}
                        on_press: app.mainCount()
                        icon: "location-enter"
            # keyboard
            BoxLayout:
                orientation: 'vertical'
                # spacing: '20dp'
                padding: ('0dp', '40dp', '0dp', '0dp')
                BoxLayout:
                    orientation: 'horizontal'        
                    Button:
                        text: '1'
                        on_release: app.add_char("1")
                    Button:
                        text: '2'
                        on_release: app.add_char("2")
                    Button:
                        text: '3'
                        on_release: app.add_char("3")
                BoxLayout:
                    orientation: 'horizontal'        
                    Button:
                        text: '4'
                        on_release: app.add_char("4")
                    Button:
                        text: '5'
                        on_release: app.add_char("5")
                    Button:
                        text: '6'
                        on_release: app.add_char("6")
                BoxLayout:
                    orientation: 'horizontal'        
                    Button:
                        text: '7'
                        on_release: app.add_char("7")
                    Button:
                        text: '8'
                        on_release: app.add_char("8")
                    Button:
                        text: '9'
                        on_release: app.add_char("9")
                BoxLayout:
                    orientation: 'horizontal'        
                    Button:
                        text: '.'
                        on_release: app.add_char(".")
                    Button:
                        text: '0'
                        on_release: app.add_char("0")
                    Button:
                        text: 'del'
                        on_release: app.del_char()
            





