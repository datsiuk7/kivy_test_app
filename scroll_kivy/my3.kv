<PageHomeScreen>
    MDLabel:
        text: "label"
        halign: "center"
<PageHistoryScreen>
    MDLabel:
        text: "label1"
        halign: "center"


MDBoxLayout:
    orientation: "vertical"
    md_bg_color: self.theme_cls.backgroundColor

    MDScreenManager:
        id: screen_manager

        PageHomeScreen:
            name: "Screen 1"

        PageHistoryScreen:
            name: "Screen 2"


    MDNavigationBar:
        on_switch_tabs: app.on_switch_tabs(*args)
        
        MDNavigationItem:
            active: True
            MDNavigationItemIcon:
                icon: "gmail"

            MDNavigationItemLabel:
                text: "Screen 1"
        
        MDNavigationItem:
            MDNavigationItemIcon:
                icon: "twitter"

            MDNavigationItemLabel:
                text: "Screen 2"