    # Field1
    BoxLayout:
        size_hint_y: None
        height: self.minimum_height
        spacing: '20dp'
        padding: ('20dp', '10dp')
        MDTextField:
            id: field1
            mode: "outlined"
            pos_hint: {"center_x": .5, "center_y": .5}
            MDTextFieldHintText:
                text: "Hint text1"
        MDIconButton:
            style: "tonal"
            md_bg_color: "brown"
            pos_hint: {"center_x": .5, "center_y": .5}
            on_press: field1.text = ''
            icon: "close"
